generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Application {
  id      String @id @default(cuid())
  slug    String @unique
  iconUrl String

  title_en        String?
  description_en  String?
  shortDescription_en String?

  title_es        String?
  description_es  String?
  shortDescription_es String?

  title_ru        String?
  description_ru  String?
  shortDescription_ru String?

  appStoreUrl   String?
  googlePlayUrl String?
  githubUrl     String?

  privacyPolicy_en String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- SETTINGS (NEW) ---
// Одна строка настроек (singleton). В SQLite это работает нормально.
model TgSettings {
  id                     Int      @id @default(1)
  vacancyBasePriceStars  Int      @default(0)  // базовая цена публикации вакансии
  resumeBasePriceStars   Int      @default(0)  // базовая цена публикации резюме
  channelDiscountPercent Int      @default(0)  // скидка на ВСЕ каналы в %
  updatedAt              DateTime @updatedAt
}

// --- TELEGRAM MODELS ---

model TgChannel {
  id          String   @id @default(cuid())
  name        String
  username    String   @unique
  category    String
  priceStars  Int
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  orders      TgOrderChannel[]
}

model TgOrder {
  id                      String   @id @default(cuid())
  telegramUserId          String
  telegramUsername        String?

  type                    String   @default("VACANCY") // "VACANCY" | "RESUME" | "RANDOM_COFFEE" | "RESUME_AI"

  payload                 String   @default("{}")
  totalAmount             Int
  status                  String   @default("PENDING") // "PENDING", "PAID_WAITING_MODERATION", "PUBLISHED", "REJECTED_REFUNDED", etc.

  telegramPaymentChargeId String?
  paymentId               String?

  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  channels                TgOrderChannel[]
}

model TgOrderChannel {
  id        String    @id @default(cuid())
  orderId   String
  channelId String
  order     TgOrder   @relation(fields: [orderId], references: [id])
  channel   TgChannel @relation(fields: [channelId], references: [id])

  @@unique([orderId, channelId])
}

// --- RANDOM COFFEE MODELS ---

model RandomCoffeeProfile {
  id             String   @id @default(cuid())
  telegramUserId String   @unique
  name           String
  specialty      String
  interests      String
  linkedin       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  participations RandomCoffeeParticipation[]
}

model RandomCoffeeParticipation {
  id             String   @id @default(cuid())
  profileId      String
  profile        RandomCoffeeProfile @relation(fields: [profileId], references: [id])

  status         String   @default("PAID") // PAID, MATCHED, REFUNDED
  matchDate      DateTime

  telegramPaymentChargeId String?
  createdAt      DateTime @default(now())

  matchWithId    String?
}

model RandomCoffeeHistory {
  id        String   @id @default(cuid())
  userAId   String
  userBId   String
  date      DateTime @default(now())

  @@unique([userAId, userBId])
}

model TgUserProfile {
  id             String   @id @default(cuid())
  telegramUserId String   @unique

  resumeOriginal  String?
  resumeCorrected String?

  updatedAt      DateTime @updatedAt
}