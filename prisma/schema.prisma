// file: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Application {
  id      String @id @default(cuid())
  slug    String @unique
  iconUrl String

  // Поля для английского языка
  title_en        String?
  description_en  String?
  shortDescription_en String? // <-- НОВОЕ ПОЛЕ

  // Поля для испанского языка
  title_es        String?
  description_es  String?
  shortDescription_es String? // <-- НОВОЕ ПОЛЕ

  // Поля для русского языка
  title_ru        String?
  description_ru  String?
  shortDescription_ru String? // <-- НОВОЕ ПОЛЕ

  // Ссылки на сторы и GitHub
  appStoreUrl   String?
  googlePlayUrl String?
  githubUrl     String?

  // Политика конфиденциальности
  privacyPolicy_en String?

  // Временные метки
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


// --- НОВЫЕ МОДЕЛИ ДЛЯ TELEGRAM ---

model TgChannel {
  id          String   @id @default(cuid())
  name        String
  username    String   @unique
  category    String
  priceStars  Int
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  orders      TgOrderChannel[]
}

// Enum поддерживаются в Postgres/MySQL. Если используете SQLite, удалите enum и используйте String в модели
// Для SQLite enum не работает нативно, Prisma эмулирует его, но лучше проверить.
// Если возникнет ошибка с Enum на SQLite, замените тип поля в модели на String.

model TgOrder {
  id                      String   @id @default(cuid())
  telegramUserId          String
  telegramUsername        String?
  
  type                    String   @default("VACANCY") // "VACANCY" | "RESUME"
  
  payload                 String   @default("{}") 
  totalAmount             Int
  status                  String   @default("PENDING") // "PENDING", "PAID_WAITING_MODERATION", "PUBLISHED", "REJECTED_REFUNDED"
  
  telegramPaymentChargeId String?       
  paymentId               String?

  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  
  channels                TgOrderChannel[]
}

model TgOrderChannel {
  id        String    @id @default(cuid())
  orderId   String
  channelId String
  order     TgOrder   @relation(fields: [orderId], references: [id])
  channel   TgChannel @relation(fields: [channelId], references: [id])

  @@unique([orderId, channelId])
}

// --- RANDOM COFFEE MODELS ---

model RandomCoffeeProfile {
  id             String   @id @default(cuid())
  telegramUserId String   @unique // ID пользователя Telegram
  name           String
  specialty      String
  interests      String
  linkedin       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  participations RandomCoffeeParticipation[]
}

model RandomCoffeeParticipation {
  id             String   @id @default(cuid())
  profileId      String
  profile        RandomCoffeeProfile @relation(fields: [profileId], references: [id])
  
  status         String   @default("PAID") // PAID, MATCHED, REFUNDED
  matchDate      DateTime // Дата пятницы, на которую записан
  
  telegramPaymentChargeId String? // Для возврата средств
  
  createdAt      DateTime @default(now())
  
  // Связь с парой (если распределен)
  matchWithId    String?  // ID профиля партнера
}

model RandomCoffeeHistory {
  id        String   @id @default(cuid())
  userAId   String
  userBId   String
  date      DateTime @default(now())

  @@unique([userAId, userBId]) // Чтобы быстро проверять, были ли они уже вместе
}

// Новая модель для хранения профиля пользователя и черновиков
model TgUserProfile {
  id             String   @id @default(cuid())
  telegramUserId String   @unique
  
  // Черновики резюме (храним как JSON строки)
  resumeOriginal  String? 
  resumeCorrected String?
  
  updatedAt      DateTime @updatedAt
}